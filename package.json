{
  "name": "fastpos-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "dependencies": {
    "dotenv": "^17.2.2",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "react-scripts": "^5.0.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "start": "electron .",
    "react-start": "react-scripts start",
    "build-react": "webpack --mode production",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.fastpos.desktop",
    "productName": "FastPOS Desktop",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
